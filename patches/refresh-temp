+static struct sk_buff *tun_do_xdp(struct tun_struct *tun,
+				  struct tun_file *tfile,
+				  struct bpf_prog *xdp_prog,
+				  struct xdp_buff *xdp,
+				  int buflen)
+{
+	u32 act = bpf_prog_run_xdp(xdp_prog, xdp);
+	struct sk_buff *skb = NULL;
+	void *orig_data = xdp->data;
+	unsigned int delta = 0;
+	int pad = xdp->data - xdp->data_hard_start;
+	int len = xdp->data_end - xdp->data;
+	int err;
+
+	switch (act) {
+	case XDP_REDIRECT:
+		err = xdp_do_redirect(tun->dev, xdp, xdp_prog);
+		xdp_do_flush_map();
+		if (err)
+			goto err_xdp;
+		goto out;
+	case XDP_TX:
+		err = tun_xdp_tx(tun->dev, xdp);
+		if (err)
+			goto err_xdp;
+		tun_xdp_flush(tun->dev);
+		goto out;
+	case XDP_PASS:
+		delta = orig_data - xdp->data;
+		break;
+	default:
+		bpf_warn_invalid_xdp_action(act);
+		/* fall through */
+	case XDP_ABORTED:
+		trace_xdp_exception(tun->dev, xdp_prog, act);
+		/* fall through */
+	case XDP_DROP:
+		err = -EINVAL;
+		goto err_xdp;
+	}
+
+	skb = build_skb(xdp->data_hard_start, buflen);
+	if (!skb) {
+		err = -ENOMEM;
+		goto err_xdp;
+	}
+
+	skb_reserve(skb, pad - delta);
+	skb_put(skb, len + delta);
+
+out:
+	return skb;
+err_xdp:
+	put_page(virt_to_head_page(xdp->data_hard_start));
+	return ERR_PTR(err);
+}
