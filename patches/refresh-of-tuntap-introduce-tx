+static inline int skb_array_peek_len(struct skb_array *a)
+{
+	struct sk_buff *skb;
+	int ret = 0;
+
+	spin_lock(&a->consumer_lock);
+	skb = __skb_array_peek(a);
+	if (skb)
+		ret = skb->len;
+	spin_unlock(&a->consumer_lock);
+
+	return ret;
+}
+
