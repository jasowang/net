 		break;
 
+	case TUNATTACHPEER:
+		ret = -EINVAL;
+		if ((tun->flags & TUN_TYPE_MASK) != IFF_TAP)
+			break;
+		ret = tun_attach_peer(sock_net(&tfile->sk), tun, &ifr);
+		break;
 	default:
 		ret = -EINVAL;
 		break;
